<AdicionarVendedor>
    FloatLayout:
        canvas:

            Rectangle:
                pos: self.pos
                size: self.size
                source: 'icones/bg1.png'

        Label:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'icones/botao_fino.png'
            pos_hint: {'right': 1, 'top':1}
            size_hint: 1 , 0.1
            bold:True
            markup: True
            text: 'Insira o [color=#00CFDB]ID do Vendedor[/color] para Acompanha-lo'
            id: label_adicionar_vendedor

        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'icones/botao.png' if self.state == 'normal' else 'icones/botao_apertado.png'
            pos_hint: {'right':0.9,'top':0.5}
            size_hint: 0.8 , 0.2
            text: 'Adicionar Vendedor'
            id: button_adicionar_vendedor
            on_release: app.adicionar_vendedor(input_id_vendedor.text)

        TextInput:
            pos_hint: {'right': 0.9,'top': 0.8}
            size_hint: 0.8, 0.2
            hint_text: '123'
            id: input_id_vendedor

        Label:
            text: ''
            markup: True
            pos_hint: {'right':0.9,'top':0.3}
            size_hint: 0.9,0.1
            id: mensagem_id_vendedor


        # Bot√£o Voltar
        FloatLayout:
            pos_hint: {'right':1 , 'top':0.10}
            size_hint: 1 , 0.10
            canvas:
                Color:
                    rgb: utils.get_color_from_hex('#ADD8E6')
                Rectangle:
                    pos: self.pos
                    size: self.size
            ImageButton:
                pos_hint: {'right':0.1 , 'top':0.9}
                size_hint: 0.1 , 0.7
                source: 'icones/voltar.png'
                on_release: app.mudar_tela('ajustes')
