<HomePage>

    FloatLayout:
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'icones/bg1.png'

        Label:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'icones/botao_fino.png'
            pos_hint: {'right':1 , 'top':1}
            size_hint: 1 , 0.1
            text: 'Total de Vendas : R$ 1000'
            id : label_total_vendas
            markup: True
            bold: True

        #lista de vendas
        ScrollView:
            pos_hint: {'right':1 , 'top':0.9}
            size_hint: 1 , 0.8

            GridLayout:
                id: lista_vendas
                cols: 1
                spacing: 2,2

            # parametros base para fazer um Scrool
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '120dp'
                row_force_height: True

        GridLayout:
            rows:1
            pos_hint: {'right':1 , 'top':0.10}
            size_hint: 1 , 0.10
            canvas:
                Color:
                    rgb: utils.get_color_from_hex('#ADD8E6')
                Rectangle:
                    pos: self.pos
                    size: self.size
            ImageButton:
                source: 'icones/add.png'
                on_release: app.mudar_tela('adicionarvendas')
            ImageButton:
                source: 'icones/salesman.png'
                on_release: app.mudar_tela('listarvendedores')
            ImageButton:
                source: 'icones/settings.png'
                on_release: app.mudar_tela('ajustes')
