<ListarVendedores>
    FloatLayout:
        canvas:

            Rectangle:
                pos: self.pos
                size: self.size
                source: 'icones/bg1.png'

        ScrollView:
            pos_hint: {'right': 1 , 'top': 1}
            size_hint: 1 , 1
            GridLayout:
                id: lista_vendedores
                cols: 1
                #parametros para fazer Scroll
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '120dp'
                row_force_height: True



        # bot√£o voltar
        FloatLayout:
            pos_hint: {'right':1 , 'top':0.10}
            size_hint: 1 , 0.10
            canvas:
                Color:
                    rgb: utils.get_color_from_hex('#ADD8E6')
                Rectangle:
                    pos: self.pos
                    size: self.size
            ImageButton:
                pos_hint: {'right':0.1 , 'top':0.9}
                size_hint: 0.1 , 0.7
                source: 'icones/voltar.png'
                on_release: app.mudar_tela('homepage')
