#:import utils kivy.utils
<Ajustes>

    FloatLayout:
        canvas:
            Color:
                #rgb: utils.get_color_from_hex('#00FFFF')
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'icones/bg1.png'

        Label:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'icones/botao_fino.png'
            pos_hint: {'right': 0.7, 'top':1}
            size_hint: 0.5 , 0.1
            bold: True
            text: 'Seu ID Unico : 1 '
            id: label_vendedor

        #Mudar Imagem do Perfil
        ImageButton:
            pos_hint: {'right':0.3 , 'top':0.8}
            size_hint: 0.2 , 0.1
            source: 'icones/foto_perfil.PNG'
            on_release: app.mudar_tela('fotoperfil')
        LabelButton:
            pos_hint: {'right':0.8 , 'top':0.8}
            size_hint: 0.3 , 0.1
            text: 'Mudar Imagem do Perfil'
            on_release: app.mudar_tela('fotoperfil')

        #Acompanhar Vendedor
        ImageButton:
            pos_hint: {'right':0.3 , 'top':0.6}
            size_hint: 0.2 , 0.1
            source: 'icones/adicionar_vendedor.png'
            on_release: app.mudar_tela('adicionarvendedor')
        LabelButton:
            pos_hint: {'right':0.8 , 'top':0.6}
            size_hint: 0.3 , 0.1
            text: 'Adicionar Vendedor'
            on_release: app.mudar_tela('adicionarvendedor')

        #Vendas Empresa
        ImageButton:
            pos_hint: {'right':0.3 , 'top':0.4}
            size_hint: 0.2 , 0.1
            source: 'icones/vendas_empresa.png'
            on_release: app.carregar_todas_vendas()
        LabelButton:
            pos_hint: {'right':0.8 , 'top':0.4}
            size_hint: 0.3 , 0.1
            text: 'Vendas da Empresa'
            on_release: app.carregar_todas_vendas()


        FloatLayout:
            pos_hint: {'right':1 , 'top':0.10}
            size_hint: 1 , 0.10
            canvas:
                Color:
                    rgb: utils.get_color_from_hex('#ADD8E6')
                Rectangle:
                    pos: self.pos
                    size: self.size
            ImageButton:
                pos_hint: {'right':0.1 , 'top':0.9}
                size_hint: 0.1 , 0.7
                source: 'icones/voltar.png'
                on_release: app.mudar_tela('homepage')
